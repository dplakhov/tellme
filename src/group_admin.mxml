					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>
			<mx:DataGridColumn width="20" >
				<mx:itemRenderer >
					<mx:Component >
						<mx:HBox  paddingLeft="5" paddingTop="3" >
							<routines:StatusImage scaleContent="false" width="10" height="10" status="tovip" toolTip="В VIP список" />
