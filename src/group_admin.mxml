	<mx:Image showEffect="{fadeIn}" hideEffect="{fadeOut}" source="{imgPublish}" click="publishMe();" 
			  width="10" height="10" toolTip="Опубликовать" id="publishInd" 
			  x="146" y="366"/>
	
	
